
@{
    Layout = null;
}
@using db_connectivity.Models;
@model List<Staff>
<!DOCTYPE html>

<html>
<head>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.14.0/css/mdb.min.css" rel="stylesheet">

    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.14.0/js/mdb.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">

    <style>
        #Slogun {
            text-transform: uppercase;
            color: 09355c !important;
            margin: 24px;
            font-family: 'Lobster', cursive;
            text-align: center;
            font-size: 3rem;
            font-weight: 80;
            margin: 4.5rem 0 3rem 0;
            letter-spacing: 3px;
        }

        .nav-colour {
            background-color: 09355c;
            color: white;
            font-family: "BellMTStd-Regular", serif;
            font-size: 3rem;
            font-weight: 40;
        }

        .navbar-brand {
            color: white !important;
            font-family: "BellMTStd-Regular", serif;
            text-align: center;
            font-size: 2rem;
            font-weight: 50;
            letter-spacing: 1px;
        }

        .nav-link {
            color: white !important;
            font-family: "BellMTStd-Regular", serif;
            text-align: center;
            font-size: 2rem;
            font-weight: 50;
            letter-spacing: 1px;
        }
    </style>
    <!--Navbar -->
    <nav class="mb-1 navbar navbar-expand-lg navbar-dark default-color">
        <a class="navbar-brand" href="#">Hotel BeachWood</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
                aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ml-3 active">
                    <a class="nav-link" href="../../Home/index">
                        Home<span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item ml-3">
                    <a class="nav-link" href="../../Home/RoomType">Rooms</a>
                </li>
                <li class="nav-item ml-3">
                    <a class="nav-link" href="../../Home/FoodType">Foods</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto nav-flex-icons">
                <li class="nav-item ml-3">
                    <a class="nav-link waves-effect waves-light" href="../../Home/SignUP">
                        <i class="fab fa-twitter"></i>
                    </a>
                </li>
                <li class="nav-item ml-3">
                    <a class="nav-link waves-effect waves-light" href="../../Home/SignUP">
                        <i class="fab fa-google-plus-g"></i>
                    </a>
                </li>
                </a>
                </li>
            </ul>
        </div>
    </nav>
    <!--/.Navbar -->
    <h3 id="Slogun">Manager</h3>

    <div class="container col-lg-4" style="text-align:center">

        <div class="modal-header light-blue darken-3 white-text">
            <h4 class="title"><i class="fas fa-sign-in-alt mr-3"></i>Manage Your Staff</h4>

        </div>
        <!--Body-->

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Password</th>
                    <th scope="col">Contact</th>
                    <th scope="col">CNIC</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Position</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Staff user in Model)
                {
                <tr>
                    <td>@user.id</td>
                    <td>@user.name</td>
                    <td>@user.password</td>
                    <td>@user.phoneno</td>
                    <td>@user.Cnic</td>
                    <td>@user.gender</td>
                    <td>@user.salary</td>
                    <td>@user.position</td>
                </tr>
                }
            </tbody>
        </table>

        <form method="post" action="../Home/Managertasks">
            <div class="modal-body mb-0">


                <div class="container ml-3">
                    <label class="radio-inline ml-3">
                        <input type="radio" name="optradio" value="Add Staff" checked>Add Staff
                    </label>
                    <label class="radio-inline ml-3">
                        <input type="radio" name="optradio" value="Remove Staff">Remove Staff
                    </label>
                    <label class="radio-inline ml-3">
                        <input type="radio" name="optradio" value="Update Staff">Update Staff
                    </label>



                </div>

                <div class="text-center mt-1-half">
                    <button type="submit" class="btn btn-default btn-rounded my-3" onclick="checkForEmptyFields()">Next<i class="fas fa-send ml-1"></i></button><label>@Model</label>
                </div>
        </form>


    </div>
    <meta name="viewport" content="width=device-width" />
    <title>Manager</title>
</head>
<body>

</body>
</html>
